{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "types": ["node", "jquery"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "ng-data-groups": [
        "dist/ng-data-groups/ng-data-groups",
        "dist/ng-data-groups"
      ],
      "ng-bs4-form-components": [
        "dist/ng-bs4-form-components/ng-bs4-form-components",
        "dist/ng-bs4-form-components"
      ],
      "@shared/*": ["src/app/shared/*"],
      "@webblocksapp/ng-data-groups": [
        "projects/ng-data-groups/src/public-api"
      ],
      "@webblocksapp/ng-bs4-form-components": [
        "projects/ng-bs4-form-components/src/public-api"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enableIvy": false
  }
}
